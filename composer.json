{
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "friendsofphp/php-cs-fixer": "^3.91"
    },
    "require": {
        "php": "^8.3",
        "ext-pdo": "*"
    },
    "scripts": {
        "app": "php bin/app.php",
        "test": "phpunit --colors=always",
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes"
    }
}
